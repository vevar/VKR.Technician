<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".feature.plan.jobs.list.maintenece.requests.ListMaintenanceForDayFragment">
    <data>
        <variable name="viewModel"
                  type="com.nstu.technician.feature.plan.jobs.list.maintenece.requests.ListMaintenanceForDayViewModel"/>
    </data>
    <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_view_maintenance"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/default_padding"
                    tools:listitem="@layout/view_maintenance"/>
            <Button
                    android:id="@+id/bottom_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fld_height"
                    android:background="@drawable/btn_round_background"
                    android:layout_margin="@dimen/default_margin"
                    android:text=""
                    android:textColor="@color/white"
                    app:setVisibility="@{viewModel.isBottomBtnVisible()}"/>
        </LinearLayout>

        <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:showIfLoad="@{viewModel.isLoading()}"/>
        <TextView
                android:id="@+id/txt_not_any_maintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ic_assignment_gray"
                android:textSize="24sp"
                android:text="@string/txt_not_any_maintenance"
                app:showIfListEmpty="@{viewModel.listMaintenance}"/>
    </FrameLayout>
</layout>