<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".feature.plan.jobs.list.maintenece.requests.ListMaintenanceForDayFragment">
    <data>
        <variable name="viewModel"
                  type="com.nstu.technician.feature.plan.jobs.list.maintenece.requests.ListMaintenanceForDayViewModel"/>
    </data>
    <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_view_maintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding"
                tools:listitem="@layout/view_maintenance"/>

        <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:showIfLoad="@{viewModel.isLoading()}"/>
        <TextView
                android:id="@+id/txt_not_any_maintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ic_assignment_gray"
                android:textSize="24sp"
                android:text="@string/txt_not_any_maintenance"
                app:showIfListEmpty="@{viewModel.listMaintenance}"/>
    </FrameLayout>
</layout>