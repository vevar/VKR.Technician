<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="maintenance" type="com.nstu.technician.domain.model.facility.maintenance.Maintenance"/>
    </data>
    <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_marginBottom="@dimen/mini_margin"
            app:cardCornerRadius="@dimen/default_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding">
            <TextView
                    android:id="@+id/name_facility"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_marginStart="@dimen/default_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/type_maintenance"
                    android:text="@{maintenance.facility.name}"
                    tools:text="НГТУ (Новосибирский государственный технический университет)"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:id="@+id/address_facility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginTop="@dimen/mini_margin"
                    app:layout_constraintTop_toBottomOf="@+id/name_facility"
                    app:layout_constraintStart_toStartOf="parent"
                    app:setAddress="@{maintenance.facility}"
                    tools:text="ул.Ватутина д. 245 оф.56"/>
            <TextView
                    android:id="@+id/type_maintenance"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setMaintenanceType="@{maintenance.maintenanceType}"

                    tools:text="Ежемесячное ТО"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>